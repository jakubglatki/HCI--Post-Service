<Window x:Class="HCI__Post_Service.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI__Post_Service"
        mc:Ignorable="d"
        Title="DialogWindow" Height="640" Width="1280">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBox x:Name="textBox" VerticalAlignment="Center" Grid.Row="1" TextChanged="textBox_TextChanged"/>

        <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="OK" Margin="5" Width="75" Height="35" IsDefault="True" Click="Button_Click"/>
            <Button Content="Cancel" Margin="5" Width="75" Height="35" IsCancel="True"/>


        </StackPanel>

    </Grid>
</Window>
